<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="product.info.type"
            destination="product.info.form.options"
            before="-"
        />
        <referenceBlock name="product.info.description">
            <arguments>
                <argument name="title" translate="true" xsi:type="string">More details</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="product.attributes">
            <arguments>
                <argument name="title" translate="true" xsi:type="string">Characteristics</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>