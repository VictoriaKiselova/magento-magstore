<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.item.renderers.default.additional">
            <block class="Magento\Framework\View\Element\Template"
                name="magstore.reviews.cart"
                template="Magento_Checkout::my_reviews.phtml" />
        </referenceBlock>

        <referenceBlock name="checkout.cart.item.renderers.configurable.additional">
            <block class="Magento\Framework\View\Element\Template"
                name="magstore.reviews.cart.configurable"
                template="Magento_Checkout::my_reviews.phtml" />
        </referenceBlock>
    </body>
</page>
